package variaveis;

import javax.swing.JOptionPane;

public class TesteTipos {

	public static void main(String[] args) {
		
		String Produto = JOptionPane.showInputDialog("Informe o nome do Produto - ex. notebook:");
		int qtde = Integer.parseInt(JOptionPane.showInputDialog("Digite a quantidade do produto:"));;
		double imposto = Double.parseDouble(JOptionPane.showInputDialog("Digite o valor do imposto:"));
		double unitario = Double.parseDouble(JOptionPane.showInputDialog("Digite o valor unitário:"));;
		
		double ValorCImposto = unitario * imposto;
		double Imposto = imposto; 
		double TotalCImposto = (unitario * qtde) * imposto;
		double TotalSImposto = unitario * qtde;
		
		System.out.println("Valor acrescido com o imposto..: " + ValorCImposto);
		System.out.println("Valor do imposto isolado.......: " + Imposto);
		System.out.println("Total com imposto..............: " + TotalCImposto);"
		System.out.println("Total sem imposto..............: " + TotalSImposto);
		
		
		
	}
	
}
